<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditArticleActivity">

    <EditText
        android:id="@+id/updatetext_title"
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:hint="Title"/>

    <EditText
        android:id="@+id/updatetext_content"
        style="@style/TextView"
        android:minLines="10"
        android:maxLines="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatetext_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:hint="Content"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical"/>


    <Button
        android:id="@+id/btn_update_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatetext_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:text="Update"
        style="@style/Button" />

</RelativeLayout>